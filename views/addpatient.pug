extends layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Add a Patient

  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='patientName') Patient Name
      .col-md-8
        input.form-control(type='text', name='patientName', id='patientName')
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='patientAge') Patient Age
      .col-md-2
        input.form-control(type='number', name='patientAge', id='patientAge')
      label(class='col-md-2 col-form-label font-weight-bold', for='birthdate') Birth Date
      .col-md-4
        input.form-control(type='date', name='birthdate', id='birthdate')
    .form-group
      .offset-md-2.col-md-8.p-1
        button.btn.btn-primary(type='submit')
          i.far.fa-envelope.fa-sm
          | Send
